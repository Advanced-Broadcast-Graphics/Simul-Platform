#include "../../CrossPlatform/SL/CppSl.hs"
struct VSinput
{
    vec3 Position;
    vec2 TexCoord;
};

uniform mat4 gWVP;
uniform sampler2D gColorMap;

shader VSmain(in VSinput IN, out vec2 texCoords)
{
    gl_Position	= gWVP * vec4(IN.Position, 1.0);
    texCoords	= IN.TexCoord;
}

shader FSmain(in vec2 texCoords, out vec4 FragColor)
{
     FragColor = texture(gColorMap, texCoords);
}

program cross_section
{
    vs(140) = VSmain();
    fs(140) = FSmain();
};
