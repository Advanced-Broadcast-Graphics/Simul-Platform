struct FarNearDepthPixelOutput
{
	vec4 farColour		SIMUL_RENDERTARGET_OUTPUT(0);
	vec4 nearColour		SIMUL_RENDERTARGET_OUTPUT(1);
	vec4 nearFarDepth	SIMUL_RENDERTARGET_OUTPUT(2);
};

FarNearDepthPixelOutput SimpleRaytrace(posTexVertexOutput IN)
{
	FarNearDepthPixelOutput fn;
	vec2 texCoords	=mixedResTransformXYWH.xy + IN.texCoords.xy*mixedResTransformXYWH.zw;
	vec4 clip_pos			=vec4(-1.0,1.0,1.0,1.0);
	clip_pos.x				+=2.0*texCoords.x;
	clip_pos.y				-=2.0*texCoords.y;
	float sineFactor		=1.0/length(clip_pos.xyz);
	vec3 view				=-normalize(mul(invViewProj,clip_pos).xyz);
	vec4 dlookup			=texture_cube_lod(depthTexture,view,0);
	RaytracePixelOutput p	=RaytraceCloudsForward(
									cloudDensity
									,rainMapTexture
									,noiseTexture3D
									,lightTableTexture
									,illuminationTexture
									,rainbowLookupTexture
									,coronaLookupTexture
									,lossTexture
									,inscTexture
									,skylTexture,volumeInscatterTexture
									,true
									,dlookup
									,view
									,clip_pos
									,IN.texCoords.xy
									,false
									,true
									,cloudIrRadiance1,cloudIrRadiance2
									);
	//if(p.colour.a>=1.0)
	//   discard;
	p.colour.rgb*=exposure;
	fn.farColour=p.colour;
	fn.nearColour=p.nearColour;
	fn.nearFarDepth = p.nearFarDepth;
	return fn;
}

shader FarNearDepthPixelOutput  PS_SimpleRaytrace(posTexVertexOutput IN) 
{
	FarNearDepthPixelOutput f= SimpleRaytrace(IN);
	return f;
}

shader FarNearPixelOutput PS_Lightpass(posTexVertexOutput IN) 
{
	vec2 texCoords			=mixedResTransformXYWH.xy+IN.texCoords.xy*mixedResTransformXYWH.zw;
	texCoords				=frac(texCoords);
	vec4 clip_pos			=vec4(-1.0,1.0,1.0,1.0);
	clip_pos.x				+=2.0*texCoords.x;
	clip_pos.y				-=2.0*texCoords.y;
	vec3 view				=-normalize(mul(invViewProj,clip_pos).xyz);
	vec4 dlookup			=texture_cube_lod(depthTexture,view,0);
	FarNearPixelOutput f	=Lightpass(	cloudDensity
									,noiseTexture3D
									,dlookup
									,view
									,clip_pos
									,sourcePosKm
									,sourceRadiusKm
									,spectralFluxOver1e6
									,minCosine
									,maxRadiusKm
									,irradianceThreshold
									);
	return f;
}

void Raytrace(int2 pos,bool rain)
{
	if(updateTexture[pos].r==0.0)
		return;
	vec2 texCoords			=vec2(pos.xy)/vec2(targetTextureSize);
	vec4 clip_pos			=vec4(-1.0,1.0,1.0,1.0);
	clip_pos.x				+=2.0*texCoords.x;
	clip_pos.y				-=2.0*texCoords.y;
	float sineFactor		=1.0/length(clip_pos.xyz);
	vec3 view				=-normalize(mul(invViewProj,clip_pos).xyz);
	vec4 dlookup			=texture_cube_lod(depthTexture,view,0);
	// Transform view into the proper frustum
	vec4 frustum_clip_pos	=mul(viewProj,vec4(view,1.0));
	frustum_clip_pos		/=frustum_clip_pos.w;
//	if(frustum_clip_pos.z<0.0||frustum_clip_pos.x<-1.0||frustum_clip_pos.x>1.0||frustum_clip_pos.y<-1.0||frustum_clip_pos.y>1.0)
//		return;
	vec2 atmosTexCoords		=0.5*(frustum_clip_pos.xy+vec2(1.0,1.0));
	atmosTexCoords.y		=1.0-atmosTexCoords.y;
	atmosTexCoords			=frac((-mixedResTransformXYWH.xy+atmosTexCoords)*mixedResTransformXYWH.zw);

	RaytracePixelOutput f	=RaytraceCloudsForward(
									cloudDensity
									,rainMapTexture
									,noiseTexture3D
									,lightTableTexture
									,illuminationTexture
									,rainbowLookupTexture
									,coronaLookupTexture
									,lossTexture
									,inscTexture
									,skylTexture,volumeInscatterTexture
									,true
									,dlookup
									,view
									,clip_pos
									,atmosTexCoords
									,true
									,rain
									,cloudIrRadiance1,cloudIrRadiance2
									);
	vec4 t2d				=texture_cube_lod(clouds2DTexture,view,0);
	// blend:
	vec4 c					=t2d;
	c.rgb					*=f.colour.a;
	c.rgb					+=f.colour.rgb;
	c.a						=t2d.a*f.colour.a;
	if(frustum_clip_pos.x>=-1.0&&frustum_clip_pos.x<=1.0&&frustum_clip_pos.y>=-1.0&&frustum_clip_pos.y<=1.0)
	{
//		c.rg=frac(atmosTexCoords.xy);
	}
	outputTexture1[pos]		=c;
	float n					=float(dlookup.y==0);
	vec4 cn					=t2d;
	cn.rgb					*=f.nearColour.a*n;
	cn.a					=1.0-n*(1.0-t2d.a);
	cn.rgb					+=f.nearColour.rgb;
	cn.a					*=f.nearColour.a;
	outputTexture2[pos]		=cn;
	outputTexture3[pos]		=f.nearFarDepth;
}

void CS_Raytrace(uint3 g : SV_GroupID, uint3 t : SV_GroupThreadID,bool rain)
{
	int2 idx				=int2(g.xy*8+t.xy);
	int2 pos				=targetRange.xy+idx*amortization+amortizationOffset.xy;
	if(pos.x>=edge.x||pos.y>=edge.y)
		return;
	if(pos.x>=targetRange.z||pos.y>=targetRange.w)
		return;
	Raytrace(pos,rain);
}

CS_LAYOUT(8,8,1)
shader void CS_Edge(uint3 g : SV_GroupID, uint3 t : SV_GroupThreadID)
{
	bool rain=true;
	int2 idx				=int2(g.xy*8+t.xy);
	int2 pos				=targetRange.xy+idx;
	if(pos.x>=targetRange.z||pos.y>=targetRange.w)
		return;
	vec4 u=updateTexture[pos];
	// current value is b, old value is r
	if(u.r<1.0&&u.b>0.0)
	{
		Raytrace(pos,  rain);
	//	outputTexture1[pos]		=vec4(1,0,0,0);
	}
}

