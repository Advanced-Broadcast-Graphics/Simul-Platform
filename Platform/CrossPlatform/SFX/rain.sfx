vec4 PSRainParticles(ParticleGeometryOutput IN, bool reverseDepth,bool msaa)
{
	vec3 light = cubeTexture.SampleLevel(wrapSamplerState, mul(cubemapTransform, vec4(-IN.dir.xyz, 0)).xyz,0).rgb;
	//c.rgb *= exposure;  instead we apply this in the cubemap.
	//light = pow(light, vec3(gamma, gamma, gamma));
	return PSRainParticles(IN,reverseDepth,light,msaa);
}

vec4 PS_RainParticles(ParticleGeometryOutput IN,bool reverseDepth,bool msaa)
{
	return PSRainParticles(IN,reverseDepth,msaa);
}

