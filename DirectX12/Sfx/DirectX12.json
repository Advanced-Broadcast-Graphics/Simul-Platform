{
	"compiler": {
		"command": "dxc.exe",
		"commandPaths": [ "$PLATFORM/External/DirectX/DXCompiler" ]
	},
	"api": "DirectX 12",
	"defaultOptions": "/T {shader_model} /nologo /Zi -Qembed_debug",
	"sourceExtension": "hlsl",
	"outputExtension": "cso",
	"outputOption": "/Fo",
	"releaseOptions": "/O3",
	"constantBufferDeclaration": "cbuffer {name}: register(b{slot})\n{\n[\t{type} {name};]} ;",
	"namedConstantBufferDeclaration": "struct {name}\n{\n[\t{type} {name};]};\n\nConstantBuffer<{name}> {instance_name}: register(b{slot});",
	"debugOutputFileOption_comment": "/O0 often causes dxc.exe to fail without error messages. Therefore we use /O3. /Od /O1 -Vd -Qembed_debug also dodgy",
	"debugOutputFileOption": "/Od /O2 -Fd\"{filename_root}.pdb\"",
	"entryPointOption": "/E{name}",
	"multiplePixelOutputFormats": false,
	"generateSlots": true,
	"supportRaytracing": true,
	"supportMultiview": true,
	"define": {
		"SFX_TYPED_UAV_LOADS": "1",
		"SFX_D3D12": "1"
	}
}