{
	"compiler": "$PLATFORM/External/DirectX/DXCompiler/dxc.exe",
	"api": "DirectX 12",
	"defaultOptions": "/T {shader_model} /nologo /Zi -Qembed_debug",
	"sourceExtension": "hlsl",
	"outputExtension": "cso",
	"outputOption": "/Fo",
	"releaseOptions": "/O3",
	"debugOutputFileOption": "/Od /O0 -Vd -Fd\"{filename_root}.pdb\"",
	"entryPointOption": "/E{name}",
	"multiplePixelOutputFormats": false,
	"generateSlots": true,
	"define": {
		"SFX_TYPED_UAV_LOADS": "1",
		"SFX_D3D12": "1"
	}
}